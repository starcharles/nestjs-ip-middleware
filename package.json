{
  "name": "nestjs-ip-middleware",
  "version": "0.0.0-development",
  "description": "A middleware for retrieving an IP address from http request and attach 'realIp' field to req.",
  "author": "Naoto Satoh <stardustforever012@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "repositoryUrl": "https://github.com/starcharles/nestjs-ip-middleware",
  "scripts": {
    "build": "tsc",
    "prepare": "husky install",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix && prettier --write \"{src,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/starcharles/nestjs-ip-middleware",
  "repository": {
    "type": "git",
    "url": "https://github.com/starcharles/nestjs-ip-middleware"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "request-ip": "^2.1.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.9.1",
    "@types/request-ip": "0.0.37",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "semantic-release": "^18.0.1",
    "semantic-release-cli": "^5.4.4",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "directories": {
    "test": "test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
